
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<head>
    <title>Liên hệ</title>
    <link rel="stylesheet" type="text/css" href="~/Content/sublime/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/sublime/styles/responsive.css">
    <link rel="stylesheet" type="text/css" href="~/Content/sublime/styles/contact.css">
    <link rel="stylesheet" type="text/css" href="~/Content/sublime/styles/contact_responsive.css">
</head>

	<!-- Home -->

<div class="home">
    <div class="home_container">
        <div class="home_background" style="background-image:url(../../Content/sublime/images/contact.jpg)"></div>
        <div class="home_content_container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content">
                            <div class="breadcrumbs">
                                <ul>
                                    <li><a href="index.html">ZM's STORE</a></li>
                                    <li>Liên hệ</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact -->

<div class="contact">
    <div class="container">
        <div class="row">

            <!-- Get in touch -->
            <div class="col-lg-8 contact_col">
                <div class="get_in_touch">
                    <div class="section_title" style="text-align:center; font-size:50px">Thùng thư ZM's STORE</div>
                    @*<div class="section_subtitle">Say hello</div>*@
                    <div class="contact_form_container">
                        <form action="#" id="contact_form" class="contact_form">
                            <div class="row">
                                <div class="col-xl-6">
                                    <!-- Name -->
                                    <label for="contact_name">Họ và tên*</label>
                                    <input type="text" id="contact_name" class="contact_input" required="required">
                                </div>
                                <div class="col-xl-6 last_name_col">
                                    <!-- Phone -->
                                    <label for="contact_phone">Phone*</label>
                                    <input type="number" id="contact_phone" class="contact_input" required="required">
                                </div>
                            </div>
                            <div>
                                <!-- Mail -->
                                <label for="contact_mail">Email* </label>
                                <input type="text" id="contact_mail" class="contact_input" required="required">
                            </div>
                            <div>
                                <label for="contact_textarea">Nội dung*</label>
                                <textarea id="contact_textarea" class="contact_input contact_textarea" required="required"></textarea>
                            </div>
                            <button class="button contact_button" id="btnSend"><span>Gửi tin nhắn</span></button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-3 offset-xl-1 contact_col">
                <div class="contact_info">
                    <div class="contact_info_section">
                        <div class="contact_info_title">Miyu Marketing</div>
                        <ul>
                            <li>Nguyễn Thuỳ Dung</li>
                            <li>SĐT: <span>+84 141 017 2110</span></li>
                            <li>Mail: <span>tuadth@gmail.com</span></li>
                        </ul>
                    </div>
                    <div class="contact_info_section">
                        <div class="contact_info_title">Za Shipper</div>
                        <ul>
                            <li>Tạ Mẫn Gia</li>
                            <li>SĐT: <span>+84 141 026 1010</span></li>
                            <li>Mail: <span>achadth@gmail.com</span></li>
                        </ul>
                    </div>
                    <div class="contact_info_section">
                        <div class="contact_info_title">ZM's STORE</div>
                        <ul>
                            <li>SĐT: <span>+84 141 210 1010</span></li>
                            <li>Mail: <span>zmstore@gmail.com</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row map_row">
            <div class="col">

                <!-- Google Map -->
                <div class="map">
                    <div id="google_map" class="google_map">
                        <div class="map_container">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

