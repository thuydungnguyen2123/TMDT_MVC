@model IEnumerable<WebStore.Models.Member>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách Thành viên</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên thành viên
        </th>
        <th>
            Địa chỉ Mail
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ma_Mem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten_Mem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.Ma_Mem }) |
                @Html.ActionLink("Sửa", "Edit", new { id = item.Ma_Mem }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Ma_Mem })
            </td>
        </tr>
    }
</table>
