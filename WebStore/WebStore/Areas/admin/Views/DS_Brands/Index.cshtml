@model IEnumerable<WebStore.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách các thương hiệu</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên thương hiệu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ten_Brand)
        </td>
        <td>
            @Html.ActionLink("Xem chi tiết", "Details", new { id = item.Ma_Brand }) |
            @Html.ActionLink("Sửa", "Edit", new { id = item.Ma_Brand }) |
            @Html.ActionLink("Xoá", "Delete", new { id = item.Ma_Brand })
        </td>
    </tr>
}

</table>
