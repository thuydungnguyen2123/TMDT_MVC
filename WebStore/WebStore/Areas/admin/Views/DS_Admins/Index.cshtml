@model IEnumerable<WebStore.Models.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách Người quản trị</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Họ và tên
        </th>
        <th>
            Địa chỉ Mail
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ma_Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.Ma_Ad }) |
                @Html.ActionLink("Sửa", "Edit", new { id = item.Ma_Ad }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Ma_Ad })
            </td>
        </tr>
    }

</table>
