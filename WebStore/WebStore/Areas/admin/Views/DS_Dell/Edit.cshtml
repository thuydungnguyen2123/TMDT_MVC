@model WebStore.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thông tin sản phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Ma_Product)

        <div class="form-group">
            <div class="control-label col-md-2">Tên sản phẩm</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ten_Product, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ten_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Loại sản phẩm</div>
            <div class="col-md-10">
                @Html.DropDownList("Ma_Type", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ma_Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Giá sản phẩm</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gia_Product, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gia_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Thông tin cơ bản</div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Info_Product, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Info_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Số lượng có sẵn</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Available, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Available, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Hình ảnh</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Image_Product, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Image_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Thông tin chi tiết sản phẩm</div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Detail_Product, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Detail_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Mô tả sản phẩm</div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Describe_Product, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Describe_Product, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts{
    <!-- jquery -->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script>
        $( function() {
            //Replace text area
            var ckeditor = CKEDITOR.replace('Info_Product', {
                customConfig: '/Content/ckeditor/config.js'
            });
            var ckeditor1 = CKEDITOR.replace('Detail_Product', {
                customConfig: '/Content/ckeditor/config.js'
            });
            var ckeditor2 = CKEDITOR.replace('Describe_Product', {
                customConfig: '/Content/ckeditor/config.js'
            });
        });
    </script>
}

<div>
    @Html.ActionLink("Quay về danh sách", "Index")
</div>
