@*@model WebStore.Models.DetailOrder*@
@model IEnumerable<WebStore.Models.DetailOrder>

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết đơn hàng</h2>

<div>
    <h4>@ViewBag.info</h4>
    <table class="table">
        <tr>
            <th>
                Tên sản phẩm
            </th>

            <th>
                Giá tiền
            </th>

            <th>
                Số lượng
            </th>

            <th>
                Thành tiền
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Ten_Product)
                </td>              
                
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Gia_Product) USD
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                
                <td>
                    @{var price = Html.DisplayFor(modelItem => item.Product.Gia_Product).ToString();}
                    @{var amount = Html.DisplayFor(modelItem => item.Amount).ToString();}
                    @(int.Parse(price)* int.Parse(amount)) USD
                </td>


                <td>
                    @Html.ActionLink("Xoá", "Detail_Delete", new { id = item.Ma_DeOr, idO=item.Ma_Order })
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Ma_Order }) |*@
    @Html.ActionLink("Quay lại danh sách", "Index")
</p>
