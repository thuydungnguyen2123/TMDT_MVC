@model IEnumerable<WebStore.Models.Transaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách giao dịch</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
